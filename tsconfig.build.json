{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@sablier/devkit/tsconfigs/build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@src": ["./src"],
      "@src/*": ["./src/*"]
    },
    "rootDir": "./src"
  },
  "exclude": ["./deployments", "./node_modules", "./src/internal"],
  "include": ["src/**/*.ts"]
}
