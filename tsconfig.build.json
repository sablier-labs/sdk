{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"]
    },
    "rootDir": "./src",
    "removeComments": true,
    "skipLibCheck": true,
    "stripInternal": true
  },
  "exclude": ["./deployments", "./node_modules", "./src/internal"],
  "include": ["src/**/*.ts"]
}
