  },
  "peerDependencies": {
    "@coral-xyz/anchor": "^0.30",
    "@solana/web3.js": "^1.98",
    "viem": "^2.39"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@effect/platform": "^0.93.6",
    "@effect/vitest": "^0.27.0",
    "@sablier/devkit": "^1.9.1",
    "@types/bun": "^1.3.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.17.2",
    "@vitest/ui": "^3.2.4",
    "bun": "^1.3.1",
    "commander": "^14.0.0",
    "copyfiles": "^2.4.1",
    "fs-extra": "^11.3.0",
    "globby": "11",
    "husky": "^9.1.7",
    "knip": "^5.62.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "winston": "^3.17"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./evm": {
      "types": "./dist/evm/index.d.ts",
      "default": "./dist/evm/index.js"
    },
    "./evm/*": {
      "types": "./dist/evm/*/index.d.ts",
      "default": "./dist/evm/*/index.js"
    },
    "./solana": {
      "types": "./dist/solana/index.d.ts",
      "default": "./dist/solana/index.js"
    },
    "./solana/*": {
      "types": "./dist/solana/*/index.d.ts",
      "default": "./dist/solana/*/index.js"
    },
    "./solana/releases/*/idl": {
      "types": "./dist/solana/releases/*/idl.d.ts",
      "default": "./dist/solana/releases/*/idl.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "airdrops",
    "blockchain",
    "deployments",
    "ethereum",
    "evm",
    "foundry",
    "hardhat",
    "sablier",
    "sablier-airdrops",
    "sablier-flow",
    "sablier-lockup",
    "smart-contracts",
    "solidity",
    "token-streaming",
    "token-vesting",
    "vesting",
    "web3"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sablier-labs/sdk.git"
  },
  "scripts": {
    "build": "just build",
    "prepack": "bun install --frozen-lockfile && just build",
    "setup": "husky"
  }
}
